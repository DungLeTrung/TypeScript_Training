{
  "compilerOptions": {
    "module": "NodeNext", 
    "moduleResolution": "NodeNext",
    "target": "ES2022", 
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true ,
    "baseUrl": ".", 
    "paths": {
      "../*": ["src/*"] 
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "files": ["src/type.d.ts"], 
  "include": ["src/**/*"] 
}
